FROM node:16-alpine

WORKDIR /app

# Install dependencies. the `node_modules` folder is in /app
COPY auth/package*.json ./
RUN npm install

# Application lays in /app/src
COPY ./auth ./
COPY auth/entrypoint.sh ./

EXPOSE 9004

ENV OPENSLIDES_DEVELOPMENT 1

ENTRYPOINT [ "./entrypoint.sh" ]
CMD ["npm", "run", "dev"]
